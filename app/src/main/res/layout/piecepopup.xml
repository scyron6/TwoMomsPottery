<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32dp"
        android:layout_marginVertical="12dp"
        android:text="Add New Project"/>

    <Button
        android:id="@+id/insertImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Photo"
        android:focusable="true"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/chosenPicture"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/insertimage"/>

    <EditText
        android:id="@+id/creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="2dp"
        android:hint="Maker"
        android:maxLines="1"
        android:inputType="text"/>

    <EditText
        android:id="@+id/pottery_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="2dp"
        android:hint="Type"
        android:maxLines="1"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pottery_date"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="2dp"
        android:hint="Date"
        android:inputType="date"/>

    <EditText
        android:id="@+id/pottery_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="Price"
        android:layout_marginHorizontal="64dp"
        android:inputType="numberDecimal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_piece"
        android:text="Save"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="64dp"
        android:layout_marginBottom="8dp"/>


</LinearLayout>